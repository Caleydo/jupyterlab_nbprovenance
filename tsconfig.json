{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "preserveWatchOutput": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "outDir": "./lib",
    "lib": [
      "DOM",
      "es2015",
      "es2017"
    ],
    "types": [],
    "strictNullChecks": true,
    "jsx": "react",
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": [
    "src/*"
  ]
}